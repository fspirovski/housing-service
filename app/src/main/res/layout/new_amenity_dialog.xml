<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:paddingHorizontal="30dp"
    android:paddingTop="20dp">

    <EditText
        android:id="@+id/newAmenityTitle"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:hint="Title"
        android:textSize="14sp" />

    <View
        android:id="@+id/newAmenitySeparator"
        android:layout_width="0dp"
        android:layout_height="2dp"
        android:layout_below="@id/newAmenityTitle"
        android:layout_alignLeft="@id/newAmenityTitle"
        android:layout_alignRight="@id/newAmenityTitle"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:background="#FF6200EE" />

    <EditText
        android:id="@+id/newAmenityDescription"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/newAmenitySeparator"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:hint="Description"
        android:textSize="14sp" />

    <EditText
        android:id="@+id/newAmenityAmount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/newAmenityDescription"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:hint="Amount to pay"
        android:textSize="14sp" />

</RelativeLayout>