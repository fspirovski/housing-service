<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:padding="30dp">

    <TextView
        android:id="@+id/amenityDetailsTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"
        android:text="Title"
        android:textSize="14sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/amenityDetailsDescription"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/amenityDetailsTitle"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"
        android:text="Description"
        android:textSize="14sp" />

    <TextView
        android:id="@+id/amenityDetailsAmount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/amenityDetailsDescription"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"
        android:text="Amount"
        android:textSize="14sp" />

    <TextView
        android:id="@+id/amenityDetailsStatus"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/amenityDetailsAmount"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"
        android:text="Status"
        android:textSize="14sp" />
</RelativeLayout>